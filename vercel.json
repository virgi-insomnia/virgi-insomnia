{
  "version": 2,
  "builds": [
    { "src": "public/***", "use": "@vercel/static" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    {
      "src": "^/$",
      "has": [
        { "type": "host", "value": "admin.kalixcasino.online" }
      ],
      "dest": "/public/admin.html"
    },
    {
      "src": "^/admin$",
      "has": [
        { "type": "host", "value": "admin.kalixcasino.online" }
      ],
      "dest": "/public/admin.html"
    },

    { "src": "^/$", "dest": "/public/landing.html" },
    { "src": "^/landing$", "dest": "/public/landing.html" },

    { "src": "^/admin$", "dest": "/public/admin.html" },
    { "src": "^/api/(.*)$", "dest": "/api/$1.js" },
    { "src": "/(.*)$", "dest": "/public/$1" }
  ]
}
